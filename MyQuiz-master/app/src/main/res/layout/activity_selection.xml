<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/light_blue_holo">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="@dimen/activity_vertical_margin">

        <!--Select Subject-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Subject"
            android:textColor="@android:color/tertiary_text_dark"
            android:padding="5dp"
            android:background="@color/header_gray"/>
        <Spinner
            android:id="@+id/spinner_select_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_prompt_subject"></Spinner>
        <include layout="@layout/view_shadow_light_blue" />

        <!--Select Topic-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Topic"
            android:textColor="@android:color/tertiary_text_dark"
            android:padding="5dp"
            android:layout_marginTop="@dimen/activity_vertical_margin_more"
            android:background="@color/header_gray"/>
        <Spinner
            android:id="@+id/spinner_select_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_prompt_topic"></Spinner>
        <include layout="@layout/view_shadow_light_blue" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@android:color/white"
            android:background="@color/light_blue_holo"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin_more"/>
    </LinearLayout>


</RelativeLayout>